<%= render "devise/shared/container" do %>

<div class="flex items-center justify-between mb-6">
  <h1 class="text-2xl font-semibold text-slate-800">Users</h1>

  <%= link_to "New User",
      new_user_path,
      class: "bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700" %>
</div>

<table class="w-full bg-white rounded-xl shadow overflow-hidden">
  <thead class="bg-slate-100 text-left text-sm text-slate-600">
    <tr>
      <th class="px-4 py-3">Name</th>
      <th class="px-4 py-3">Email</th>
      <th class="px-4 py-3">Employee ID</th>
      <th class="px-4 py-3">Role</th>
      <th class="px-4 py-3"></th>
    </tr>
  </thead>

  <tbody class="divide-y">
    <% @users.each do |user| %>
      <tr class="hover:bg-slate-50">
        <td class="px-4 py-3"><%= user.name %></td>
        <td class="px-4 py-3"><%= user.email %></td>
        <td class="px-4 py-3"><%= user.employee_id %></td>
        <td class="px-4 py-3 capitalize"><%= user.role %></td>

        <td class="px-4 py-3 text-right space-x-2">
          <%= link_to "Edit",
              edit_user_path(user),
              class: "text-blue-600 hover:underline" %>

          <%= link_to "Delete",
              user_path(user),
              data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
              class: "text-red-600 hover:underline" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% end %>
