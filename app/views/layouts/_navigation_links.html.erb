<li>
  <%
    is_dashboard_active = request.path == dashboard_path || request.path == '/'
  %>
  <a href="<%= dashboard_path %>" class="group flex gap-x-3 rounded-md <%= is_dashboard_active ? 'bg-gray-50 text-blue-600 dark:bg-white/5 dark:text-white' : 'text-gray-700 hover:bg-gray-50 hover:text-blue-600 dark:text-gray-400 dark:hover:bg-white/5 dark:hover:text-white' %> p-2 text-sm/6 font-semibold">
    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" data-slot="icon" aria-hidden="true" class="size-6 shrink-0 <%= is_dashboard_active ? 'text-blue-600 dark:text-white' : 'text-gray-400 group-hover:text-blue-600 dark:group-hover:text-white' %>">
      <path d="m2.25 12 8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25" stroke-linecap="round" stroke-linejoin="round" />
    </svg>
    Dashboard
  </a>
</li>

<% if current_user.scheduler? %>
  <%
    is_employees_active = request.path == users_path || request.path.start_with?('/users/')
  %>
  <li>
    <a href="<%= users_path %>" class="group flex gap-x-3 rounded-md <%= is_employees_active ? 'bg-gray-50 text-blue-600 dark:bg-white/5 dark:text-white' : 'text-gray-700 hover:bg-gray-50 hover:text-blue-600 dark:text-gray-400 dark:hover:bg-white/5 dark:hover:text-white' %> p-2 text-sm/6 font-semibold">
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" data-slot="icon" aria-hidden="true" class="size-6 shrink-0 <%= is_employees_active ? 'text-blue-600 dark:text-white' : 'text-gray-400 group-hover:text-blue-600 dark:group-hover:text-white' %>">
        <path d="M15 19.128a9.38 9.38 0 0 0 2.625.372 9.337 9.337 0 0 0 4.121-.952 4.125 4.125 0 0 0-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 0 1 8.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0 1 11.964-3.07M12 6.375a3.375 3.375 0 1 1-6.75 0 3.375 3.375 0 0 1 6.75 0Zm8.25 2.25a2.625 2.625 0 1 1-5.25 0 2.625 2.625 0 0 1 5.25 0Z" stroke-linecap="round" stroke-linejoin="round" />
      </svg>
      Employees
    </a>
  </li>
<% end %>

<% if current_user.employee? %>
  <%
    is_my_shifts_active = request.path == my_shifts_path || request.path.match?(/\/users\/\d+\/shifts\/\d+/)
  %>
  <li>
    <a href="<%= my_shifts_path %>" class="group flex gap-x-3 rounded-md <%= is_my_shifts_active ? 'bg-gray-50 text-blue-600 dark:bg-white/5 dark:text-white' : 'text-gray-700 hover:bg-gray-50 hover:text-blue-600 dark:text-gray-400 dark:hover:bg-white/5 dark:hover:text-white' %> p-2 text-sm/6 font-semibold">
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" data-slot="icon" aria-hidden="true" class="size-6 shrink-0 <%= is_my_shifts_active ? 'text-blue-600 dark:text-white' : 'text-gray-400 group-hover:text-blue-600 dark:group-hover:text-white' %>">
        <path d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 0 1 2.25-2.25h13.5A2.25 2.25 0 0 1 21 7.5v11.25m-18 0A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75m-18 0v-7.5A2.25 2.25 0 0 1 5.25 9h13.5A2.25 2.25 0 0 1 21 11.25v7.5" stroke-linecap="round" stroke-linejoin="round" />
      </svg>
      My Shifts
    </a>
  </li>
<% end %>
